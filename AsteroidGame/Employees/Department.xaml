<Window x:Class="Employees.Department"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees"
        mc:Ignorable="d"
        Title="Department" Height="130" Width="370">
    <StackPanel>
        <WrapPanel VerticalAlignment="Top">
            <TextBlock Text="ID: " Margin="5" Width="70"></TextBlock>
            <TextBox Name="txtId" Margin="5" Width="250" IsEnabled="False"></TextBox>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Top">
            <TextBlock Text="Название: " Margin="5" Width="70"></TextBlock>
            <TextBox Name="txtName" Margin="5" Width="250"></TextBox>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Name="btnOk" IsDefault="True" Margin="10" Width="75" Click="btnOk_Click">OK</Button>
            <Button Name="btnCancel" IsCancel="True" Margin="10" Width="75">Отмена</Button>
        </WrapPanel>
    </StackPanel>
</Window>
